<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="unidentifiableTransaction">
    <resultMap id="map" type="com.wingmar.taffybear.budget.IdentifiableTransaction">
        <constructor>
            <idArg column="id" javaType="UUID"/>
            <arg column="merchant" javaType="String"/>
            <arg column="transaction_date" javaType="LocalDate"/>
            <arg column="amount" javaType="BigDecimal"/>
            <arg column="category" javaType="String"/>
            <arg column="type" javaType="TransactionType"/>
        </constructor>
    </resultMap>

    <select id="newId" resultType="UUID">
        select uuid()
    </select>

    <insert id="insert" parameterType="com.wingmar.taffybear.budget.IdentifiableTransaction">
        insert into unidentifiableTransaction (id, merchant, transaction_date, amount, category, type)
        values (#{id}, #{merchant}, #{date}, #{amount}, #{category}, #{type});
    </insert>

    <select id="find" resultMap="map">
        SELECT * FROM unidentifiableTransaction
        where id = #{value}
    </select>
</mapper>